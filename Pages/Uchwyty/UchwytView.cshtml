@page
@model InstrukcjaTechnologiczna.UchwytViewModel
@{
    ViewData["Title"] = "UchwytView";
}
    <head>
        <script src="https://kit.fontawesome.com/06d2fabce8.js" crossorigin="anonymous"></script>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" type="text/css" href="~/css/MainStyle.css" />


    </head>
<h1 style="text-align:center">Uchwyty</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <select class="przyciskwyszukania" asp-for="SearchByType"
                    asp-items="Model.Rodzaje">
            </select>
            <span class="input-group-btn">
                <button class="btn btn-default"><i class="fas fa-search"></i></button>
            </span>
        </div>
    </div>
    



</form>
<table class="table">
    <thead>
        <tr>
            <th>Nazwa</th>
            <th>Kliknij aby wejść w szczegóły</th>
        </tr>
    </thead>
    @foreach (var uchwyt in Model.Uchwyty)
    {
        <tr>
            <td>@uchwyt.RodzajUchwytu</td>
            <td>
                <a href=~/@uchwyt.FilePath><i class="fas fa-info-circle"></i> </a>
            </td>

        </tr>
    }
</table>



